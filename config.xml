<?xml version='1.0' encoding='utf-8'?>
<widget id="bo.com.mc4.qrscanner" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Plugin QR Scanner</name>
    <description>
        Plugin desarrollo por MC4 para Banco FIE
    </description>
    <author email="rlaredo@mc4.com.bo" href="http://mc4.com.bo">
        MC4 SRL.
    </author>
    <content src="index.html" />
    <plugin name="Plugin QR Scanner" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
